<script>

    $("document").ready(f1);

    function f1() {

        $("#b1").on("click", function () {

           
            var tval = $("#tun").val();
            
            $.getJSON("/accounts/check_accounts?u_name=" + tval, function (d) {


                if (d) {
                    
                    
                    //alert("Exists");
                    $("#l2").empty();
                    $("#l2").append("ALready Exists");
                }
                else {

                    $("#bSub").removeAttr("disabled");
                    $("#l2").empty();
                    $("#l2").append("not Exists");
                }



            });

        });
    }
</script>

  <!-- End course content -->
<div>
                        <br /><br /> <input type="button" value="Ceck avaible" id="b1" class="btn btn-primary btn-lg btn-block" /><br/><br/>
                        <form class="form col-md-12 center-block" action="/accounts/save_signUp">

                            <div class="form-group">
                             @Html.TextBoxFor(m=>m.name,new { @class="form-control input-lg" ,placeholder="name" ,required="required" })
                                                               
                            </div>
                            <div class="form-group">
                               @Html.TextBoxFor(m=>m.email,new { @class="form-control input-lg" ,placeholder="email",required="required" })

                            </div>
                            <div class="form-group">
                               @Html.TextBoxFor(m=>m.username,new { @class="form-control input-lg",id="tun",placeholder="user name",required="required"  })
                                
                                <label id="l2"></label>

                            </div>
                            <div class="form-group">
                               @Html.TextBoxFor(m=>m.password,new { @class="form-control input-lg" ,placeholder="password",required="required" })

                            </div>
                            
                            <div class="form-group">
                                <input type="submit" value="Create Account" disabled="disabled" id="bSub"  class="btn btn-primary btn-lg btn-block" />
 
                            </div>
                        </form>

                    </div>
